{
  "name": "rpm-changes",
  "displayName": "RPM changes file",
  "description": "Support for RPM changes file format.",
  "version": "1.1.2",
  "repository": "https://github.com/lslezak/vscode-rpm-changes.git",
  "homepage": "https://github.com/lslezak/vscode-rpm-changes",
  "publisher": "lslezak",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "icon": "media/icon.png",
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "rpm-changes.insertNewEntry.command",
        "title": "RPM Changes: Insert a New Changes Entry",
        "enablement": "!editorReadonly && editorLangId == 'rpm-changes'"
      },
      {
        "command": "rpm-changes.insertNewEntry.menu",
        "title": "Insert a New Changes Entry"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "rpm-changes.insertNewEntry.menu",
          "when": "!editorReadonly && editorLangId == 'rpm-changes'",
          "group": "1_modification"
        }
      ]
    },
    "languages": [
      {
        "id": "rpm-changes",
        "aliases": [
          "RPM changes file",
          "rpm-changes"
        ],
        "extensions": [
          ".changes"
        ],
        "firstLine": "-{67}",
        "configuration": "./languages/rpm-changes-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "rpm-changes",
        "scopeName": "source.rpm-changes",
        "path": "./syntaxes/rpm-changes.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "RPM Changes",
      "type": "object",
      "properties": {
        "rpm-changes.author.name": {
          "description": "Full name of the author used in the new entries",
          "type": "string"
        },
        "rpm-changes.author.email": {
          "description": "Author email used in the new entries",
          "type": "string"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "prettier": "prettier --write .",
    "pngquant": "find media -type f -name '*.png' ! -name '*.opt.png' -exec pngquant -f --speed 1 --strip --ext .opt.png --skip-if-larger -- \\{\\} \\;",
    "gifsicle": "find media -type f -name '*.gif' ! -name '*.opt.gif' -exec gifsicle -O3 --lossy=80 --colors 256 -o \\{\\}.opt.gif \\{\\} \\;",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.2",
    "esbuild": "^0.25.10",
    "eslint": "^9.36.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "date-fns": "^2.30.0",
    "prettier": "^3.6.2"
  }
}
